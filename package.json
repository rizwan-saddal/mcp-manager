{
  "name": "mcp-manager",
  "displayName": "MCP Manager",
  "description": "Lazy Loading Router for MCP tools using uv",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcp-manager.syncConfig",
        "title": "MCP: Sync Configuration"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MCP Manager",
      "properties": {
        "mcp-manager.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to the Python interpreter to use for uv."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}