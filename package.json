{
  "name": "mcp-gateway",
  "displayName": "MCP Gateway",
  "description": "Lazy Loading Router for MCP tools using uv",
  "version": "0.0.6",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/rizwan-saddal/mcp-manager"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcp-manager.syncConfig",
        "title": "MCP: Sync Configuration"
      },
      {
        "command": "mcp-manager.showStatus",
        "title": "MCP: Show Status"
      },
      {
        "command": "mcp-manager.addTool",
        "title": "MCP: Add Tool"
      },
      {
        "command": "mcp-manager.openDashboard",
        "title": "MCP: Open Manager Dashboard"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MCP Gateway",
      "properties": {
        "mcp-gateway.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to the Python interpreter to use for uv."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}